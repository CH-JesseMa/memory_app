<h1>High Scores</h1>

<div id='newDiv'><a id='new' href="">New Game (n) or Start Game (g)</a></div>

<table id='scoresTable'>
  <tr>
    <th>Points</th>
    <th>Name</th>
    <th>Guesses</th>
    <th>Percentage</th>
  </tr>

  <% @scores.each do |score| %>
    <tr>
      <td><%= score.points %></td>
      <td>
        <% if score.name != "" %>
          <%= score.name %>
        <% else %>
          Guest
        <% end  %>
      </td>
      <td><%= score.guesses %></td>
      <td>
        <% if score.guesses != 0 %>
          <%= (score.correct / score.guesses) %>%
        <% else %>
          0%
        <% end  %>
      </td>
    </tr>
  <% end %>
</table>
